<!-- Page Content -->
<div id="page-wrapper">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <h1 class="page-header">Administrador</h1>

        <% if @admin.errors.any? %>
          <div class="alert alert-danger alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
            <ul>
              <% @admin.errors.full_messages.each do |message| %>
                <li class="item-errors"><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="panel panel-default">
          <div class="panel-heading">
            <%= action %>
          </div>
          <!-- /.panel-heading -->
          <div class="panel-body">
            <div class="col-lg-6">
              <%= form_for([:backoffice, @admin]) do |f| %>

                <div class="form-group">
                  <label>Email</label>
                  <%= f.text_field :email, class: "form-control", placeholder: "admin@admin.com.br" %>
                </div>

                <div class="form-group">
                  <label>Password</label>
                  <%= f.text_field :password, class: "form-control", placeholder: "123456" %>
                </div>

                <div class="form-group">
                  <label>Confirmation Password</label>
                  <%= f.text_field :password_confirmation, class: "form-control", placeholder: "123456" %>
                </div>

                <button type="submit" class="btn btn-default">Salvar</button>

              <% end %>
            </div>
          </div>
          <!-- /.panel-body -->
        </div>


      </div>
      <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
  </div>
  <!-- /.container-fluid -->
</div>
<!-- /#page-wrapper -->


