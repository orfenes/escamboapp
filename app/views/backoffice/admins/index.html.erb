<h1 class="page-header">Administradores</h1>

<div class="panel panel-default">
  <div class="panel-heading">
    <span>Listando administradores</span>

    <% if policy(@admin).new? %>
      <%= link_to new_backoffice_admin_path, class: "btn btn-success btn-circle pull-right", style: "margin-top: -5px" do %>
        <i class="fa fa-plus"></i>
      <% end %>
    <% end %>

  </div>
  <!-- /.panel-heading -->
  <div class="panel-body">
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
            <th>id</th>
            <th>Nome</th>
            <th>Email</th>
            <th>Tipo de acesso</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
        <% @admin.each do |admin| %>
          <tr>
            <td><%= admin.id %></td>
            <td><%= admin.name %></td>
            <td><%= admin.email %></td>
            <td><%= admin.role_i18n %></td>
            <td style="width: 150px">

            <%= link_to '#', class: "btn btn-info btn-circle", data: {toggle: 'modal', target: '#sendMailModal'} do  %>
              <i class="fa fa-envelope"></i>
            <% end %>

            <%= link_to edit_backoffice_admin_path(admin.id), class: "btn btn-primary btn-circle" do  %>
              <i class="fa fa-edit"></i>
            <% end %>

            <% if current_admin.id != admin.id && policy(@admin).destroy? %>
              <%= link_to backoffice_admin_path(admin.id), method: :delete,
                  class: "btn btn-danger btn-circle",
                    data:{confirm: t('messages.confirm_with', item: admin.name )} do %>
                <i class="fa fa-minus"></i>
              <% end %>
            <% end %>

            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
    <!-- /.table-responsive -->
  </div>
  <!-- /.panel-body -->
</div>

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="sendMailModal">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="sendMailModal">New message</h4>
      </div>
      <div class="modal-body">
        <form>
          <div class="form-group">
            <label for="recipient-name" class="control-label">Recipient:</label>
            <input type="text" class="form-control" id="recipient-name">
          </div>
          <div class="form-group">
            <label for="message-text" class="control-label">Message:</label>
            <textarea class="form-control" id="message-text"></textarea>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Send message</button>
      </div>
    </div>
  </div>
</div>

