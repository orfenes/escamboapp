  <% if notice %>
    <%= javascript_tag "$.notify({ message: '#{notice}'}, {type: 'success', placement: { from: 'top', align: 'right'}});" %>
  <% end %>

  <% if alert %>
    <script>
      <%= javascript_tag "$.notify({ message: '#{alert}'}, {type: 'danger', placement: { from: 'top', align: 'right'}});" %>
    </script>
  <% end %>