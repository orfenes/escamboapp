<%= content_for :javascripts do %>
  <%= javascript_include_tag 'site/profile/ads' %>
<% end %>

<% if @ad.errors.any? %>
  <div class="alert alert-danger alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
    <ul>
      <% @ad.errors.full_messages.each do |message| %>
        <li class="item-errors"><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for([:site, :profile, @ad],  html: {multipart: true}) do |f| %>
  <div class="row">
    <div class="col-xs-6">
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control', placeholder: 'titulo' %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-4">
      <div class="form-group">
        <%= f.label :category %>
        <%= f.collection_select :category_id, Category.all, :id, :description, {}, {class: 'form-control'} %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-2">
      <div class="form-group">
        <%= f.label :price %>
        <div class="input-group">
          <div class="input-group-addon"><%= @ad.price.currency.symbol %></div>
          <%= f.text_field :price, class: 'form-control', placeholder: 'price' %>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-6">
      <div class="form-group">
        <%= f.label :picture %><br>
        <% if @ad.picture.present? %>
          <%= image_tag @ad.picture(:medium), class:'img-thumbnail' %>
        <% end %>
        <%= f.file_field :picture, class: 'btn btn-default' %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-3">
      <div class="form-group">
        <%= f.label :finish_date %>
        <%= f.text_field :finish_date, class: 'form-control datepicker', value: (l(@ad.finish_date) unless @ad.finish_date.blank?) %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12">
      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, class: 'form-control', placeholder: 'Descrição', rows: 10 %>
      </div>
    </div>
  </div>

  <%= submit_tag 'Enviar', class: 'btn btn-default' %>

<% end %>